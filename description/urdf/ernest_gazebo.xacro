<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="ernest_gazebo">
  <gazebo>
      <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
        <parameters>$(find bringup)/config/effort_controller_config.yaml</parameters>
      </plugin>
  </gazebo>
<!-- Include Gazebo plugin for 3D pose -->
  <gazebo>
    <plugin filename="libgazebo_ros_p3d.so" name="gazebo_ros_p3d">
      <ros>
          <remapping>odom:=odom</remapping>
      </ros>
      <frame_name>map</frame_name>
      <body_name>base_link</body_name>
      <update_rate>1000.0</update_rate>
      <gaussian_noise>0.0</gaussian_noise>
    </plugin>
  </gazebo>

  <gazebo reference="front_left_wheel_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="front_left_steer_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="front_right_wheel_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="front_right_steer_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="rear_left_wheel_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="rear_left_steer_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="rear_right_wheel_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="rear_right_steer_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="pivot_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="bogie_joint">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <gazebo reference="pivot">
    <provideFeedback>true</provideFeedback>
  </gazebo>
  <!-- The ft_sensor plugin -->  
  <gazebo>
      <plugin name="fr_wheel_sensor" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <remapping>wrench:=fr_wheel_sensor</remapping>
        </ros>
        <joint_name>front_right_wheel_joint</joint_name>
        <updateRate>10.0</updateRate>
      </plugin>

      <plugin name="fl_wheel_sensor" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <remapping>wrench:=fl_wheel_sensor</remapping>
        </ros>
        <joint_name>front_left_wheel_joint</joint_name>
        <updateRate>10.0</updateRate>
      </plugin>

      <plugin name="rr_wheel_sensor" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <remapping>wrench:=rr_wheel_sensor</remapping>
        </ros>
        <joint_name>rear_right_wheel_joint</joint_name>
        <updateRate>10.0</updateRate>
      </plugin>

      <plugin name="rl_wheel_sensor" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <remapping>wrench:=rl_wheel_sensor</remapping>
        </ros>
        <joint_name>rear_left_wheel_joint</joint_name>
        <updateRate>10.0</updateRate>
      </plugin>

      <plugin name="pivot_sensor" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <remapping>wrench:=pivot_sensor</remapping>
        </ros>
        <joint_name>pivot_joint</joint_name>
        <updateRate>10.0</updateRate>
      </plugin>

      <plugin name="fl_steer_sensor" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <remapping>wrench:=fl_steer_sensor</remapping>
        </ros>
        <joint_name>front_left_steer_joint</joint_name>
        <updateRate>10.0</updateRate>
      </plugin>

      <plugin name="fr_steer_sensor" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <remapping>wrench:=fr_steer_sensor</remapping>
        </ros>
        <joint_name>front_right_steer_joint</joint_name>
        <updateRate>10.0</updateRate>
      </plugin>

      <plugin name="rl_steer_sensor" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <remapping>wrench:=rl_steer_sensor</remapping>
        </ros>
        <joint_name>rear_left_steer_joint</joint_name>
        <updateRate>10.0</updateRate>
      </plugin>

      <plugin name="rr_steer_sensor" filename="libgazebo_ros_ft_sensor.so">
        <ros>
          <remapping>wrench:=rr_steer_sensor</remapping>
        </ros>
        <joint_name>rear_right_steer_joint</joint_name>
        <updateRate>10.0</updateRate>
      </plugin>
  </gazebo>


            
  <gazebo reference="chassis">
    <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="pivot">
  <material>Gazebo/DarkGrey</material>
  </gazebo>

  <gazebo reference="bogie">
  <material>Gazebo/White</material>
  </gazebo>

  <gazebo reference="front_left_steer">
  <material>Gazebo/DarkGrey</material>
  </gazebo>
  <gazebo reference="rear_left_steer">
  <material>Gazebo/DarkGrey</material>
  </gazebo>
  <gazebo reference="front_right_steer">
  <material>Gazebo/DarkGrey</material>
  </gazebo>
  
  <gazebo reference="rear_right_steer">
  <material>Gazebo/DarkGrey</material>
  </gazebo>
  
  <gazebo reference="front_left_wheel">
    <material>Gazebo/Grey</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <fdir1>1 0 0</fdir1>
    <kp>10000000.0</kp>
    <kd>10.0</kd>
    <minDepth>0.01</minDepth>
    <maxVel>0</maxVel>
  </gazebo>

  <gazebo reference="front_right_wheel">
    <material>Gazebo/Grey</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <fdir1>1 0 0</fdir1>
    <kp>10000000.0</kp>
    <kd>10.0</kd>
    <minDepth>0.01</minDepth>
    <maxVel>0</maxVel>
  </gazebo>

  <gazebo reference="rear_left_wheel">
    <material>Gazebo/Grey</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>10000000.0</kp>
    <kd>10.0</kd>
    <minDepth>0.01</minDepth>
    <maxVel>0</maxVel>
  </gazebo>
  
  <gazebo reference="rear_right_wheel">
    <material>Gazebo/Grey</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <kp>10000000.0</kp>
    <kd>10.0</kd>
    <minDepth>0.01</minDepth>
    <maxVel>0</maxVel>
  </gazebo>
  
</xacro:macro>

</robot>